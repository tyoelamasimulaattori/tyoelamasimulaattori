#end-view
  padding 50px 4em 0 4em
  text-align center
  background-color #DEF3FA
  h1
    font-weight 300

  .end-view__header
    width 100%
    height 50px
    position absolute
    left 0
    top 0
    background alpha(primaryColor, 90%)
    padding 1em
    color #fff
    box-sizing border-box
    .login, .user-profile
      float right


  .column1-5
    img
      max-width 100%

  .column4-5
    text-align left
    padding-left 2em

  .modal--hidden
    display none

  .modal__dialog
    min-height 0

.end-view-content
  p
    img
      float left
      width 300px
      margin 0 1em 1em 0

  background-color #FFFFFF
  padding 2em
  position relative
  max-width 1100px
  margin auto

.logo
  position absolute
  width 125px
  left 2em
  top 2em
