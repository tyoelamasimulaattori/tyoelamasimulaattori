#editor-view
  padding-left sidebarWidth
  padding-right 0
  padding-top 0
  input, textarea
    font inherit

  section
    margin-bottom 2em
    padding-bottom 3em
    border-bottom 1px solid #ddd

  .sidebar
    color #fff
    font-weight 300
    box-shadow 2px 2px 2px rgba(0, 0, 0, 0.25)
    z-index 1

    .btn
      border-radius 0
      width 100%
      box-sizing border-box
      background darken(primaryColor, 5)
      position relative
      z-index 10
      &:hover
        background darken(primaryColor, 7)

  .view__header
    .btn--icon
      background darken(primaryColor, 8)

.step-input
  margin 1em 0
  textarea
    width 100%
    height 150px
    font inherit

.step-options-list
  width 100%

  th
    text-align left

  td:last-child,
  th:last-child
    width 90px
    text-align center

.option-input
  display flex

.step-buttons
  .btn
    padding 4px 10px
  .btn:not(:first-child)
    margin-left 0.3em
