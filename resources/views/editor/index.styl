#editor-view
  padding-left sidebarWidth
  input, textarea
    font inherit

  section
    margin-bottom 2em
    padding-bottom 3em
    border-bottom 1px solid #ddd

  .sidebar
    color #fff
    font-weight 300
    .btn
      border-radius 0
      width 100%
      box-sizing border-box
      background darken(primaryColor, 5)
      position relative
      z-index 10
      &:hover
        background darken(primaryColor, 7)

.step-input
  margin 1em 0
  textarea
    width 100%
    height 150px
    font inherit

.step-options-list
  width 100%

  th
    text-align left

  td:last-child,
  th:last-child
    width 90px
    text-align center

.option-input
  display flex

.step-buttons
  .btn
    padding 4px 10px
  .btn:not(:first-child)
    margin-left 0.3em
