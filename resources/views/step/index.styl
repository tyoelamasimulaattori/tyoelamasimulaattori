#step-view
  padding 0
  padding-left sidebarWidth
  height 100%
  box-sizing border-box
  .sidebar
    h3
      padding 5px

  .modal__dialog
    min-height 0%

    #conf-modal
      text-align center

  .modal__footer .btn
    margin 5px

  .accordion
    margin 1em

  .person-card
    margin 2em 0

  .btn--icon
    background darken(primaryColor, 8)
    position absolute
    top 0.3em
    left 0.5em

.step-view__header
  width 100%
  height 50px
  position absolute
  background alpha(primaryColor, 90%)
  top 0
  padding 0 1em
  line-height 50px
  color #fff
  box-sizing border-box

  .login, .user-profile
    float right

.step-view__container
  width 100%
  height 100%
  position relative
  background-size cover
  background-repeat no-repeat
  background-position center
  box-sizing border-box
  padding-top 50px
