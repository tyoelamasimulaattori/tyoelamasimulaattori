#step-view
  padding 0
  padding-left 350px
  height 100%
  box-sizing border-box

  .sidebar
    width 350px
    height 100%
    position absolute
    top 0
    left 0
    border-right 1px solid #ccc
    overflow auto
    background white

  .accordion
    margin 1em

  .person-card
    margin 2em 0

.step-view__header
  width 100%
  height 50px
  position absolute
  background alpha(primaryColor, 90%)
  top 0
  padding 1em
  color #fff
  box-sizing border-box

  .login, .user-profile
    float right

.step-view__container
  width 100%
  height 100%
  position relative
  background-size cover
  background-repeat no-repeat
  background-position center
  box-sizing border-box
  padding-top 50px
