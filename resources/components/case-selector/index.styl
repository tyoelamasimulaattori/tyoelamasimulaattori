.case-selector
  position relative
  overflow auto
  text-align center
  h2
    text-align center
  .btn
    margin 30px

.case-selector__cases
  height 250px
  position relative

.case-selector__arrow
  position absolute
  left 1em
  top 50%
  font-size 2em
  margin-top -1em
  z-index 2
  cursor pointer
  i
    color textColor

.case-selector__arrow--right
  left auto
  right 1em

.case-selector__cases
  overflow-x hidden

.case-selector__cases__container
  width 350px
  height 100%
  left 50%
  position absolute
  margin-left -150px

.case-selector__cases__slider
  transition left 300ms
  height 100%
  position absolute
  top 0

.case
  float left
  height 100%
  padding 1em 0
  box-sizing border-box
  transform scale(0.8, 0.8)
  transition transform 0.3s

.case--selected
  transform scale(1, 1)

.case__container
  position relative
  box-sizing border-box

  color textColor
  height 100%
  overflow auto
  padding-bottom 3em
  text-align center

.case__image
  width 100%
  height 100%
  background-size cover

.case__title
  width 100%
  height 3rem
  line-height 3rem
  margin 0
  position absolute
  bottom 0
  left 0
  font-weight 300
