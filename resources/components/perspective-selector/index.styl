.perspective-selector
  overflow auto

.perspective
  padding 2em
  padding-bottom 1em
  height 220px
  box-sizing border-box
  float left
  overflow hidden
  text-align center
  position relative
  cursor pointer
  background darken(primaryColor, 3)
  border-right 1px solid darken(primaryColor, 7)
  color #fff
  box-shadow inset 0px -1px 1px -1px rgba(0, 0, 0, 0.3)
  &:last-child
    border-right 1px solid primaryColor
  p
    margin 0
    font-size 12px
  h3
    margin-bottom 0.5em


.perspective--selected
  border-bottom 0
  border-right 0
  cursor default
  background #fff
  color textColor
  box-shadow 0 0 2px rgba(0, 0, 0, 0.3)
  z-index 20

.perspective__icon
  width 40px
  height 40px
  display inline-block
  background-size 100% 100%

