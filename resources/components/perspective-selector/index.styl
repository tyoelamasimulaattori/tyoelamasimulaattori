.perspective-selector
  overflow auto

  .perspective
    background darken(primaryColor, 3)

.perspective
  padding 2em
  padding-bottom 1em
  height 220px
  box-sizing border-box
  float left
  overflow hidden
  text-align center
  position relative
  cursor pointer
  border-left 3px solid darken(primaryColor, 7)
  color #fff
  &:first-child
    border-left 0
  p
    margin 0
    font-size 12px
  h3
    margin-bottom 0.5em

  &.perspective--selected
    border-bottom 0
    border-right 0
    cursor default
    background #fff
    color textColor
    z-index 1


  &:hover
    background darken(primaryColor, 10)
    border-color darken(primaryColor, 10)
    & + .perspective
      border-color darken(primaryColor, 10)


.perspective--selected:hover
  background #fff

.perspective__icon
  width 40px
  height 40px
  display inline-block
  background-size 100% 100%

