.sidebar
  width sidebarWidth
  height 100%
  position fixed
  top 0
  left 0
  overflow auto
  background white
  box-sizing border-box

.sidebar::-webkit-scrollbar
  display none

.sidebar + .view__container
  width 100%
  height 100%
  position relative
  background-size cover
  background-repeat no-repeat
  background-position center
  box-sizing border-box
  padding 0
  padding-top 50px
