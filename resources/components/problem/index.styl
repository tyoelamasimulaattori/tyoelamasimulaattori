.problem
  width 100%
  height 100%
  position relative
  overflow auto

.problem__description
  overflow auto
  background #fff
  margin 1em
  padding 1em
  .btn
    float right

.problem__questions
  width 100%
  position absolute
  bottom 40px

.question
  margin 1em
  padding 1em
  cursor pointer
  border 1px solid #ccc
  border-radius 4px
  background rgba(255, 255, 255, 0.8)
  color #0E3984

.question:hover
  box-shadow inset 0 0 0 5px #018BC2

.problem__header
  height 50px
  padding 1em
  .login
    float right

.problem__footer
  width 100%
  padding 0 1em
  position absolute
  bottom 5px
  right 0
  .btn
    font-size 1em
    padding 0.6em

  .controls
    float right
    margin 0
    text-align left
    .btn:last-child
      margin-right 0
