@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,300,600')

@import "_variables"
@import "_grid"
@import "_components"

html, body
  width 100%
  height 100%
  margin 0
  font-family 'Open Sans', sans-serif
  font-weight 400
  color textColor
  font-size 14px

h1
  font-size 3em
  text-transform uppercase
  margin 2rem 0
  color inherit

p, ul
  line-height 1.7em

a
  text-decoration none

.subtitle
  color #ababab

/*
 * Index view
 */

#app
  width 100%
  height 100%

#index-view

  p
    font-weight 600
    margin-bottom 2em

  .btn
    padding 1.25em 4em
    font-size 1.2em

.perspective--1
  background primaryColor
.perspective--2
  background darken(primaryColor, 3)
.perspective--3
  background darken(primaryColor, 6)
.perspective--4
  background darken(primaryColor, 9)
.perspective--5
  background lighten(primaryColor, 5)
