/*
 * Modal
 */

.modal
  display none
  &.modal--visible
    display block

.modal, .modal:after
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  overflow-y auto
  background rgba(0, 0, 0, 0.1)

.modal__dialog
  width 80%
  max-width 900px
  min-height 60%
  margin auto
  position relative
  top 10%
  margin-bottom 10%
  background #fff
  z-index 2
  overflow auto
  box-sizing border-box
  padding 1em 3em

.modal__footer
  padding 1em 0

.modal h1
  text-align center
  font-weight 300
